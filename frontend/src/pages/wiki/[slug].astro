---
// src/pages/wiki/[slug].astro
import SiteLayout from '../../layouts/SiteLayout.astro'
import { getArticle, formatDate, splitComma } from '../../lib/api'
import { renderMarkdown, extractToc } from '../../lib/markdown'

const { slug } = Astro.params

let article
try {
  article = await getArticle(slug!)
} catch {
  return Astro.redirect('/404')
}

if (!article || article.status !== 'published' || article.type !== 'wiki') {
  return Astro.redirect('/404')
}

const html = renderMarkdown(article.content)
const toc = extractToc(article.content)
const tags = splitComma(article.tags)
---

<SiteLayout title={article.title} description={article.excerpt || undefined} type="article">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 py-12">
    <div class="flex gap-12">
      <!-- Main -->
      <article class="flex-1 min-w-0">
        <nav class="flex items-center gap-2 text-sm text-slate-500 mb-8">
          <a href="/" class="hover:text-slate-300 transition-colors">é¦–é¡µ</a>
          <span>/</span>
          <a href="/wiki" class="hover:text-slate-300 transition-colors">Wiki</a>
          <span>/</span>
          <span class="text-slate-400 truncate">{article.title}</span>
        </nav>

        <header class="mb-10">
          <div class="flex items-center gap-2 mb-4">
            <span class="badge-wiki">ğŸ“š Wiki</span>
          </div>
          <h1 class="text-3xl sm:text-4xl font-display font-bold text-white leading-tight mb-5">
            {article.title}
          </h1>
          <div class="flex flex-wrap items-center gap-5 text-sm text-slate-400">
            <time>æœ€åæ›´æ–°ï¼š{formatDate(article.updated_at)}</time>
            <span class="flex items-center gap-1.5">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0zM2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
              </svg>
              {article.view_count} æ¬¡æŸ¥çœ‹
            </span>
          </div>
        </header>

        <div class="prose-custom" set:html={html} />

        {tags.length > 0 && (
          <div class="mt-10 pt-8 border-t border-surface-700">
            <div class="flex flex-wrap gap-2">
              {tags.map(tag => (
                <a href={`/wiki?tag=${tag}`} class="tag">#{tag}</a>
              ))}
            </div>
          </div>
        )}

        <div class="mt-10 pt-8 border-t border-surface-700 flex items-center justify-between">
          <a href="/wiki" class="btn-secondary">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
            </svg>
            è¿”å› Wiki
          </a>
          <a href={`/admin?edit=${article.slug}`} class="btn-ghost text-xs">
            <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
            </svg>
            ç¼–è¾‘
          </a>
        </div>
      </article>

      <!-- TOC -->
      {toc.length > 0 && (
        <aside class="hidden xl:block w-56 flex-shrink-0">
          <div class="sticky top-24">
            <h4 class="text-xs font-semibold text-slate-500 uppercase tracking-wider mb-3">ç›®å½•</h4>
            <nav class="space-y-1">
              {toc.map(item => (
                <a 
                  href={`#${item.id}`}
                  class={`block text-sm text-slate-400 hover:text-accent-purple transition-colors leading-5 ${
                    item.level === 1 ? 'font-medium' : item.level === 2 ? 'pl-3' : 'pl-6'
                  }`}
                >
                  {item.text}
                </a>
              ))}
            </nav>
          </div>
        </aside>
      )}
    </div>
  </div>
</SiteLayout>
